        private DacAgency GetSelectedAgency(string sCode)
        {
            foreach (DacAgency store in dacAgencyCollection)
            {
                if (store.Code == sCode)
                    return store;
            }
            return null;
        }
        private bool IsStoreCodeExists(string sCode)
        {
            foreach (DacAgency store in dacAgencyCollection)
            {
                if (store.Code == sCode.Trim().ToUpper())
                {
                    return true;
                }
            }
            return false;
        }
