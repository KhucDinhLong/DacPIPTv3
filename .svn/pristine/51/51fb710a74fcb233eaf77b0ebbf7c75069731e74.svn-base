}*/

.ten-may:hover {
    background: #007bff;
    color: #fff;
    box-shadow: 0 0 1px rgb(0 0 0 / 13%), 0 1px 3px rgb(0 0 0 / 20%);
    border-radius: .25rem;
}

.table{
    line-height:1rem
}

.dropdown-toggle:after {
    content: none;
}

.carousel-indicators {
    margin-right: 1%;
    margin-left: 1%;
    bottom: unset;
    top: -45px
}

@media screen and (min-width: 1621px) {
    .carousel-indicators {
        top: -45px !important;
    }
}

@media screen and (min-width: 1161px) {
    .carousel-indicators {
        top: -45px !important;
    }
}

@media screen and (max-width: 1160px) {
    .carousel-indicators{
        margin-right:1%;
        margin-left:1%;
        bottom:unset;
        top:-5px!important;
    }
}

@media screen and (max-width: 768px) {
    .carousel-indicators {
        top:-5px!important;
    }
}
